<html lang="en">

<%- include("../partials/head/_head") %> 

<body>
  <%- include("../partials/navbar/_navbar") %>
  <%- include("../partials/sidebar/_sidebar") %>  
  <main class="uk-margin uk-margin-auto">

    <nav uk-toggle="target: #offcanvas-overlay"><span uk-icon="chevron-double-right"></span></nav>

    <h1 class="uk-heading-divider"> Camera List 
      <% if (isAdmin) { %>
        <a href="#modal-center" class="uk-link-muted" uk-toggle><span uk-icon="icon: plus-circle"></span></a>
        <% } %>
    </h1>
    
    <section class="cameras_container uk-grid-match uk-grid-small	uk-grid-margin" uk-grid>
      <% cameras.forEach(camera => { %>
        <div class="camera_card uk-card uk-card-default uk-card-hover">
          <div class="uk-card-media-top">
            <a href="/cameras/<%= camera.id %>">
              <img class="camera_image" src="<%= camera.cameraImage %> " alt="camera image">
            </a>
            <div class="uk-card-body">
              <h3 class="camera_heading uk-card-title"><%= camera.cameraName %> </h3>
              <p class="camera_meta"><%= camera.photographyType %> camera </p>
            </div>
          </div>
        </div>
        <% }) %>
        
        
      </section>
  </main>
  <%- include("./new.ejs") %> 
  <%- include("../partials/footer/_footer") %> 
</body>
</html>